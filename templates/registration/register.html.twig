{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<section class=" flex justify-center min-h-screen gap-6 flex-col items-center text-ellipsis ">

		{% for flash_error in app.flashes('verify_email_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}

		{{ form_start(registrationForm, {'attr' : {'class' : 'flex flex-col transition px-4 py-6 duration-150 ease-out w-1/3 bg-slate-100 shadow shadow-md border border-gray-200 rounded rounded-md'}}) }}
		<h1 class="text-3xl font-bold mb-8 text-center">Register</h1>

		{{ form_label(registrationForm.email,'Email: ',{'label_attr' : {'class' : 'text-black text-sm mb-1'}}) }}
		{{ form_widget(registrationForm.email,{'attr' : { 'class' : ' py-1 px-2 placeholder:text-gray-400 shadow-md outline-none rounded border focus:ring-green-600 focus:ring-1 focus:border-green-600 transition duration-150 ease-out'}}) }}
		<span class="text-sm text-red-500 font-bold mb-3 mt-1">{{ form_errors(registrationForm.email) }}</span>
		
		{{ form_label(registrationForm.username,'Username: ',{'label_attr' : {'class' : 'text-black text-sm mb-1'}}) }}
		{{ form_widget(registrationForm.username,{'attr' : { 'class' : ' py-1 px-2 placeholder:text-gray-400 shadow-md outline-none rounded border focus:ring-green-600 focus:ring-1 focus:border-green-600 transition duration-150 ease-out'}}) }}
		<span class="text-sm text-red-500 font-bold mb-3 mt-1">{{ form_errors(registrationForm.username) }}</span>


		{{ form_label(registrationForm.plainPassword,'Password: ',{'label_attr' : {'class' : 'text-black text-sm mb-1'}}) }}
		{{ form_widget(registrationForm.plainPassword,{'attr' : { 'class' : ' py-1 px-2 placeholder:text-gray-400 shadow-md outline-none rounded border focus:ring-green-600 focus:ring-1 focus:border-green-600 transition duration-150 ease-out'}}) }}
		<span class="text-sm text-red-500 font-bold mb-3 mt-1">{{ form_errors(registrationForm.plainPassword) }}</span>

		<div class="flex justify-between items-center ">
			{{ form_label(registrationForm.agreeTerms,'Agree to terms of use and service: ',{'label_attr' : {'class' : 'text-black text-sm mb-1 cursor-pointer'}}) }}
			{{ form_widget(registrationForm.agreeTerms,{'attr' : { 'class' : ' py-1 px-2 mb-1 cursor-pointer'}}) }}
		</div>
		<span class="text-sm text-red-500 font-bold mb-3 mt-1">{{ form_errors(registrationForm.agreeTerms) }}</span>

		{# <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"> #}

		{{ form_widget(registrationForm.submit, { 'label' : 'Register', 'attr' : { 'class' : 'rounded border border-2 border-green-700 bg-green-700 py-2 text-sm text-white font-bold hover:text-green-700 hover:bg-white hover:border-green-700 transition duration-150 ease-out disabled:bg-gray-400 disabled:border-gray-400 disabled:cursor-no-drop disabled:hover:text-white mt-7' } ,'disabled' : false }) }}


		<span class="font-semibold text-center mt-7">Have an account!
			<span class="text-green-700">
				<a href="{{path('app_login')}}">Login.</a>
			</span>
		</span>
		{{ form_end(registrationForm) }}

	</section>
{% endblock %}
